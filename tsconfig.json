{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "core": [
                "dist/core"
            ],
            "core/*": [
                "dist/core/*"
            ]
        },
        "target": "es5",
        "module": "es2015",
        "lib": ["es2017","dom"],
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
